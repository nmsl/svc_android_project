<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:background="@color/Black"
        android1:orientation="vertical" >

        <TextView
            android1:id="@+id/txt_videoName"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_threadNo"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_layerID"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_tmpID"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_frameInfo"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_switchNo"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_FPS"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />

        <TextView
            android1:id="@+id/txt_throughput"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />
        
        <TextView
            android1:id="@+id/txt_freeMem"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="Small Text"
            android1:textAppearance="?android:attr/textAppearanceSmall"
            android1:textColor="@color/Light_Cyan" />
    </LinearLayout>

</RelativeLayout>